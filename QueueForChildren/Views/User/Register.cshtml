
@using QueueForChildren.Data.Dtos;
@model RegisterDto;

<div class="row">

    <div class="col-lg-8 col-lg-offset-2 mx-auto">

        <h1 class="text-center">Регистрация</h1>

        <p class="lead">Пожалуйста, заполните достоверные данные</p>


        <form method="post" asp-action="Register" role="form">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LastName">Фамилия</label>
                        <input asp-for="LastName" type="text" class="form-control">
                        <span asp-validation-for="LastName" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name">Имя</label>
                        <input asp-for="Name" type="text" class="form-control">
                        <span asp-validation-for="Name" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="MiddleName">Отчество</label>
                        <input asp-for="MiddleName" type="text" placeholder="При наличии" class="form-control">                       
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EMail">Ваш Email</label>
                        <input asp-for="EMail" type="email" class="form-control">
                        <span asp-validation-for="EMail" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Password">Пароль</label>
                        <input asp-for="Password" type="password" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PasswordConfirm">Подтвердите пароль</label>
                        <input asp-for="PasswordConfirm" type="password" class="form-control">
                        <span asp-validation-for="PasswordConfirm" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input type="submit" class="btn btn-success btn-send" value="Регистрация">
                </div>
            </div>

        </form>
    </div>
</div>