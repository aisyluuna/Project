@using QueueForChildren.Data.Dtos;
@model CreateParentDto


    <div class="row mx-auto">
        <form method="post" style="width: 100%" asp-action="CreateParent">
            <h1 class="text-center">Заполните ваши данные</h1>
            <div class="row mx-auto">
                <div class="col-lg-6">
                    <h4 class="text-center">Личные данные</h4>
                    <div class="form-group">
                        <label asp-for="BirthDate">Дата рождения</label>
                        <input asp-for="BirthDate" type="date" class="form-control">
                        <span asp-validation-for="BirthDate" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <h4 class="text-center">Ваш адрес</h4>
                    <div class="form-group">
                        <input id="latitude" asp-for="Address.Latitude" hidden />
                        <input id="longitude" asp-for="Address.Longitude" hidden />
                        <label asp-for="Address.Settlement">Населенный пункт</label>
                        <input asp-for="Address.Settlement" class="form-control">
                        <span asp-validation-for="Address.Settlement" />
                    </div>
                </div>
            </div>
            <div class="row mx-auto">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="Serial">Серия</label>
                        <input asp-for="Serial" class="form-control">
                        <span asp-validation-for="Serial" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="Address.MicroRegion">Район</label>
                        <input asp-for="Address.MicroRegion" class="form-control">
                        <span asp-validation-for="Address.MicroRegion" />
                    </div>
                </div>
            </div>
            <div class="row mx-auto">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="Number">Номер</label>
                        <input asp-for="Number" class="form-control">
                        <span asp-validation-for="Number" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="Address.Street">Улица</label>
                        <input asp-for="Address.Street" class="form-control">
                        <span asp-validation-for="Address.Street" />
                    </div>
                </div>
            </div>
            <div class="row mx-auto">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="IssuedBy">Кем выдано</label>
                        <input asp-for="IssuedBy" class="form-control">
                        <span asp-validation-for="IssuedBy" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="Address.HouseNumber">Дом</label>
                        <input asp-for="Address.HouseNumber" class="form-control">
                        <span asp-validation-for="Address.HouseNumber" />
                    </div>
                </div>
            </div>
            <div class="row mx-auto">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="IssuedDate">Дата выдачи</label>
                        <input asp-for="IssuedDate" type="date" class="form-control">
                        <span asp-validation-for="IssuedDate" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="Address.AdditionalChar">Добавочный символ</label>
                        <input asp-for="Address.AdditionalChar" class="form-control" placeholder="При наличии">
                        <span asp-validation-for="Address.AdditionalChar" />
                    </div>
                </div>
            </div>
            <div class="row mx-auto">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="SubdivisionCode">Код подразделения</label>
                        <input asp-for="SubdivisionCode" class="form-control">
                        <span asp-validation-for="SubdivisionCode" />
                    </div>
                </div>
            </div>
            <div class="row mx-auto">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="INN">ИНН</label>
                        <input asp-for="INN"  class="form-control">
                        <span asp-validation-for="INN" />
                    </div>
                </div>
            </div>
            <div class="row mx-auto">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="Phone">Телефон</label>
                        <input asp-for="Phone" type="tel" class="form-control">
                        <span asp-validation-for="Phone" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-3 mx-auto">
                    <button type="submit" class="btn btn-outline-success">Подтвердить</button>
                </div>
            </div>
        </form>
    </div>


@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function (position) {
                    $('#latitude').val(position.coords.latitude);
                    $('#longitude').val(position.coords.longitude);
                });
            }
        });
    </script>
}
